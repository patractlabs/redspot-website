---
layout: layouts/base.njk
templateClass: tmpl-home
---

<header class="header has-text-white">
  <div class="header-hero-jupiter is-flex is-flex-direction-column is-justify-content-flex-start is-align-items-center">
    <h3 class="has-text-centered title is-6 mb-1 has-text-white" style="margin-top: 160px;"></h3>
    <img width="524" src="/img/redspot.svg" alt="redspot logo"/>
    <div class="block has-text-centered mt-6" style="width: 582px;">
      {{ 'intro' | i18n }}
    </div>
  </div>
</header>

<section class="is-flex is-flex-direction-column is-align-items-center has-text-white" style="padding: 100px 0 56px;">
  <img src="{{ 'img-feature' | i18n }}" width="365" alt="feature" style="margin-bottom: 73px;"/>
  <div class="is-flex is-justify-content-space-evenly py-6" style="width: 1040px;">
    <img src="/img/automatic.png" width="236" alt="Automatic"/>
    <div class="is-align-self-center">
      <h3 class="title is-3 mb-1 has-text-white">{{ 'automatic' | i18n }}</h3>
      <p class="mt-5" style="width: 420px;">{{ 'automatic-desc' | i18n }}</p>
    </div>
  </div>
  <div class="is-flex is-justify-content-space-evenly py-6" style="width: 1040px; background: linear-gradient(45deg, #353535 0%, #181818 100%); border-radius: 4px;">
    <div class="is-align-self-center">
      <h3 class="title is-3 mb-1 has-text-white">{{ 'flexible' | i18n }}</h3>
      <p class="mt-5" style="width: 420px;">{{ 'flexible-desc' | i18n }}</p>
    </div>
    <img src="/img/flexible.png" width="236" alt="flexible"/>
  </div>
  <div class="is-flex is-justify-content-space-evenly py-6" style="width: 1040px;">
    <img src="/img/extendable.png" width="236" alt="extendable"/>
    <div class="is-align-self-center">
      <h3 class="title is-3 mb-1 has-text-white">{{ 'extendable' | i18n }}</h3>
      <p class="mt-5" style="width: 420px;">{{ 'extendable-desc' | i18n }}</p>
    </div>
  </div>
  <div class="is-flex is-justify-content-space-evenly py-6" style="width: 1040px; background: linear-gradient(45deg, #353535 0%, #181818 100%); border-radius: 4px;">
    <div class="is-align-self-center">
      <h3 class="title is-3 mb-1 has-text-white">{{ 'ts-supported' | i18n }}</h3>
      <p class="mt-5" style="width: 420px;">{{ 'ts-supported-desc' | i18n }}</p>
    </div>
    <img src="/img/ts-supported.png" width="236" alt="flexible"/>
  </div>
  <div class="is-flex is-justify-content-space-evenly py-6" style="width: 1040px; background: #121212; border-radius: 4px; margin-top: 56px;">
    <div class="is-flex is-flex-direction-column is-align-items-center" style="width: 405px;">
      <img src="/img/plugin.png" width="256" alt="plugin"/>
      <p class="has-text-white has-text-centered mt-5">{{ 'plugin-desc' | i18n }}</p>
      <img class="mt-5"src="/img/plugin-illustration.png" width="256" alt="plugin illustratio"/>
      <a class="button is-danger is-outlined is-rounded is-medium mt-6">{{ 'plugin-button' | i18n }}</a>
      <a class="has-text-white mt-4">{{ 'write-plugin' | i18n }}</a>
    </div>
    <ul class="is-flex is-flex-direction-column is-justify-content-space-between" style="width: 543px;">
      <li class="has-background-black-ter is-flex is-justify-content-space-between" style="padding: 32px;">
        <div>
          <h4 class="title is-5 has-text-white">@redspot/patract</h4>
          <p>{{ 'redspot-patract-intro' | i18n }}</p>
        </div>
        <a class="has-text-danger is-align-self-center is-size-5">{{ 'details' | i18n }}</a>
      </li>
      <li class="has-background-black-ter is-flex is-justify-content-space-between" style="padding: 32px;">
        <div>
          <h4 class="title is-5 has-text-white">@redspot/gas-reporter</h4>
          <p>{{ 'redspot-gas-report-intro' | i18n }}</p>
        </div>
        <a class="has-text-danger is-align-self-center is-size-5">{{ 'details' | i18n }}</a>
      </li>
      <li class="has-background-black-ter is-flex is-justify-content-space-between" style="padding: 32px;">
        <div>
          <h4 class="title is-5 has-text-white">@redspot/jupiter</h4>
          <p>{{ 'redspot-jupiter-intro' | i18n }}</p>
        </div>
        <a class="has-text-danger is-align-self-center is-size-5">{{ 'details' | i18n }}</a>
      </li>
    </ul>
  </div>
</section>

<section class="is-flex is-flex-direction-column is-align-items-center has-text-white" style="background: #1C1C1C; padding: 26px 0 34px;">
  <img src="{{ 'img-sample-code' | i18n }}" width="365" alt="smaple code"/>
  <p class="is-size-5" style="width: 839px; margin-top: 32px;">{{ 'sample-code' | i18n }}</p>
  <img src="/img/sample-code-illustration.png" width="839" alt="smaple code illustration" style="margin: 32px auto;"/>
  <a class="button is-danger is-outlined is-rounded is-medium mgt-medium">{{ 'more-examples' | i18n }}</a>
</section>

<section class="quick-start is-flex is-flex-direction-column is-align-items-center has-text-white">
  <img src="{{ 'img-quick-start' | i18n }}" width="365" alt="quick-start"/>
  <img src="/img/quick-start-illustration.png" width="459" alt="quick-start illustration" style="margin-top: 32px;"/>
</section>

